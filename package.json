{
  "name": "vidpod-testing",
  "version": "2.1.0",
  "description": "Testing suite for VidPOD application",
  "scripts": {
    "test": "npm run test:all",
    "test:all": "npm run test:navigation && npm run test:e2e && npm run test:api && npm run test:integration",
    "test:navigation": "node run-navigation-tests.js",
    "test:navigation:comprehensive": "node comprehensive-navigation-test.js",
    "test:navigation:student": "node test-student-navigation.js", 
